    <script type="text/javascript"></script>
   <script >
       $(function () {
           var divName = "content";
           var tableName = "tablecreate";
           var tableindex = 1;
               $.ajax({
                   url: "http://localhost:55039/jcservice/getdbinfo?tablename=&page=1&pagesize=5",
                   type:'GET',
                   dataType:'json',
                   success: function (data)
                   {
                       $.each(data.Data, function (i, item) {
                           divName += tableindex.toString();
                           tableName += tableindex.toString();
                           tableindex++;
                           addDiv(divName, tableName, item.TableName, "null", "null");
                          // alert("sa");
                           $.each(item.Field, function (j, jtem) {
                               $("#" + tableName).append('<tr><td>字段&nbsp;&nbsp;&nbsp;:&nbsp;&nbsp;&nbsp;' + jtem.Fieidname + '</a></td><td>类型&nbsp;&nbsp;&nbsp;:&nbsp;&nbsp;&nbsp;' + jtem.Fieidtype + '</td><td>字段名&nbsp;&nbsp;&nbsp;:&nbsp;&nbsp;&nbsp;null</td><td>备注&nbsp;&nbsp;&nbsp;:&nbsp;&nbsp;&nbsp;' + jtem.Fieidmean + '</td></tr>');
                           })
                       });

                   },error()
                   {
                       alert("连接失败");
                   }
               });
           });
       function addDiv(divName, tableName,entname,cntname,remake)
       {
          // alert(divName + "*" + tableName + "*" + entname + "*" + cntname+"*"+remake);
          // $("#form1").append('<div class="content" id="' + divName + '"><div class="title"><p class="Atitle">' + dbtname + '</p></div><table id="'+tableName +'"><tr class="trbox"><td colspan="2" class="trtitle">表名:</td><td colspan="2" class="trtitle">表的备注:'+remake+'</td></tr></table></div>');
           $("#form1").append('<div class="content" id="' + divName + '"><div class="title"><p class="Atitle">' + entname + '</p></div><table id="' + tableName + '"><tr class="trbox"><td colspan="2" class="trtitle">表名:&nbsp;&nbsp;' + cntname + '</td><td colspan="2" class="trtitle">表的备注:&nbsp;&nbsp;' + remake + '</td></tr></table></div>')
           $("#form1").append('<div class="fill"><p>&nbsp;</p><p>&nbsp;</p></div>');
       }
    </script>
